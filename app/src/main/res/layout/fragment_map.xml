<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/summaryGps"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="110dp"
        app:layout_constraintBottom_toTopOf="@id/summaryGps"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnFollowToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryTransparent"
            app:elevation="20dp"
            app:fabSize="mini"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_gps_lock"
            app:tint="@color/white2" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMapType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/colorPrimaryTransparent"
            app:elevation="20dp"
            app:fabSize="mini"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnFollowToggle"
            app:srcCompat="@drawable/ic_layer"
            app:tint="@color/white2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/summaryGps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/colorPrimaryVariant"
        android:clipToPadding="true"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@id/summaryTotals"
        app:layout_constraintTop_toBottomOf="@id/mapFragment">

        <TextView
            style="@style/navlogSummary"
            android:text="@string/txtLat" />

        <TextView
            android:id="@+id/txtLat"
            style="@style/navlogSummary"
            android:layout_marginEnd="20dp" />

        <TextView
            style="@style/navlogSummary"
            android:text="@string/txtLng" />

        <TextView
            android:id="@+id/txtLng"
            style="@style/navlogSummary"
            android:layout_marginEnd="20dp" />

        <TextView
            style="@style/navlogSummary"
            android:text="@string/txtGs" />

        <TextView
            android:id="@+id/txtSpeed"
            style="@style/navlogSummary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/summaryTotals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@color/colorPrimaryVariant"
        android:clipToPadding="true"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/summaryGps">

        <TextView
            style="@style/navlogSummary"
            android:text="@string/txtTotalDistance" />

        <TextView
            android:id="@+id/txtTotalDist"
            style="@style/navlogSummary"
            android:layout_marginEnd="20dp" />

        <TextView
            style="@style/navlogSummary"
            android:text="Total Time" />

        <TextView
            android:id="@+id/txtTotalTime"
            style="@style/navlogSummary"
            android:layout_marginEnd="20dp" />

        <TextView
            style="@style/navlogSummary"
            android:text="@string/txtTotalFuel" />

        <TextView
            android:id="@+id/txtTotalFuel"
            style="@style/navlogSummary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
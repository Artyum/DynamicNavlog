<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/densityLayout"
    style="@style/globalMainframe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="CalcDensityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/globalFragmentFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/globalCaption"
                android:text="@string/txtDensityCalculator" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/boxPressure"
                    style="@style/inputLayout"
                    android:layout_width="@dimen/valuesWidth"
                    android:hint="@string/txtStationPressure"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtDensityStation"
                        style="@style/layoutTextDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <RadioGroup
                    android:id="@+id/radioPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/boxPressure"
                    app:layout_constraintLeft_toRightOf="@id/boxPressure"
                    app:layout_constraintTop_toTopOf="@id/boxPressure">

                    <RadioButton
                        android:id="@+id/radioINHG"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="inHG" />

                    <RadioButton
                        android:id="@+id/radioHPA"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="HPa" />
                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tableMargin">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/boxTemperature"
                    style="@style/inputLayout"
                    android:layout_width="@dimen/valuesWidth"
                    android:hint="@string/txtTemperature"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtDensityTemperature"
                        style="@style/layoutTextDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <RadioGroup
                    android:id="@+id/radioTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/boxTemperature"
                    app:layout_constraintLeft_toRightOf="@id/boxTemperature"
                    app:layout_constraintTop_toTopOf="@id/boxTemperature">

                    <RadioButton
                        android:id="@+id/radioF"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="\u2109" />

                    <RadioButton
                        android:id="@+id/radioC"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="\u2103" />
                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tableMargin">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/boxElevation"
                    style="@style/inputLayout"
                    android:layout_width="@dimen/valuesWidth"
                    android:hint="@string/txtElevations"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtDensityElevation"
                        style="@style/layoutTextDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <RadioGroup
                    android:id="@+id/radioElevation"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/boxElevation"
                    app:layout_constraintLeft_toRightOf="@id/boxElevation"
                    app:layout_constraintTop_toTopOf="@id/boxElevation">

                    <RadioButton
                        android:id="@+id/radioFT"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="ft" />

                    <RadioButton
                        android:id="@+id/radioM"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="m" />
                </RadioGroup>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red"
                    android:text="@string/txtClear"
                    app:cornerRadius="@dimen/btnRadius"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnCalculate"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/txtCalculate"
                    app:cornerRadius="@dimen/btnRadius"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/globalFragmentFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/outputFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/outputLayout"
                        android:hint="@string/txtPressureAltitude">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/outPressureAltitude"
                            style="@style/layoutTextDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/spacer" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/outputLayout"
                        android:hint="@string/txtElevations">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/outPressureAltitudeElev"
                            style="@style/layoutTextDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                </TableRow>

                <TableRow android:layout_marginTop="@dimen/tableMargin">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/outputLayout"
                        android:hint="@string/txtDensityAltitude">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/outDensityAltitude"
                            style="@style/layoutTextDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/spacer" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/outputLayout"
                        android:hint="@string/txtElevations">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/outDensityAltitudeElev"
                            style="@style/layoutTextDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/tableMargin">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/outputLayout"
                        android:hint="@string/txtDensityAltitudeNws">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/outDensityAltitudeNws"
                            style="@style/layoutTextDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/spacer" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/outputLayout"
                        android:hint="@string/txtElevations">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/outDensityAltitudeNwsElev"
                            style="@style/layoutTextDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/tableMargin">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/outputLayout"
                        android:hint="@string/txtDensityAltitudeAprox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/outDensityAltitudeAprox"
                            style="@style/layoutTextDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView style="@style/spacer" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/outputLayout"
                        android:hint="@string/txtElevations">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/outDensityAltitudeAproxElev"
                            style="@style/layoutTextDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                </TableRow>
            </TableLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/globalFragmentFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/manualText"
                android:text="@string/manualDACalc1" />

            <TextView
                style="@style/manualText"
                android:text="@string/manualDACalc2" />

            <TextView
                style="@style/manualText"
                android:text="@string/manualDACalc3" />

            <TextView
                style="@style/manualText"
                android:text="@string/manualDACalc4" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>

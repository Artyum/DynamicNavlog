<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="navLogHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white2</item>
        <item name="android:background">@color/colorPrimaryVariant</item>
    </style>

    <style name="navLogHeaderItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white2</item>
    </style>

    <style name="navlogItem">
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginVertical">1dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="navlogSummary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="navlogUnits">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
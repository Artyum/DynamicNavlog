<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="timersTextInput" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/tableMargin</item>
    </style>

    <style name="timersText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="timersButton">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="phazeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
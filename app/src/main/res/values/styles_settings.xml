<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="sumTable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="sumTableRow">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">25dp</item>
    </style>

    <style name="sumTableCol0">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">0</item>
    </style>

    <style name="sumTableCol1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>
    <style name="sumTableUnits">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/unitsMargin</item>
    </style>
</resources>